<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/id_bool"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/t_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_toRightOf="@+id/id_bool"
                    android:fontFamily="serif"
                    android:gravity="center_horizontal"
                    android:text="ТЕХНИЧЕСКОЕ ОБСЛУЖИВАНИЕ ВСПОМОГАТЕЛЬНЫХ МЕХАНИЗМОВ И ОБОРУДОВАНИЯ"
                    android:textColor="@color/colorPrimaryDark"
                    android:textIsSelectable="true"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/t_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_value"
                    android:layout_toRightOf="@+id/id_bool"
                    android:gravity="center_horizontal"
                    android:paddingTop="3dp"
                    android:text=" УКАЗАНИЯ ПО ТЕХНИЧЕСКОМУ ОБСЛУЖИВАНИЮ ОТДЕЛЬНЫХ МЕХАНИЗМОВ И АППАРАТОВ "
                    android:textIsSelectable="true"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/t_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_value"
                    android:layout_toRightOf="@+id/id_bool"
                    android:paddingTop="3dp"
                    android:text="привет"
                    android:textColor="#272727"
                    android:textIsSelectable="true"
                    android:textSize="14dp" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
