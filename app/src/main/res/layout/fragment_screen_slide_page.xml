    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="2dp"
            card_view:cardCornerRadius="3dp"
            android:id="@+id/cv"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/Lin_lay_1">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:text="Показывать мои координаты"
                    android:id="@+id/rd_btn_yes" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:text="Не показывать мои координаты"
                    android:id="@+id/rd_btn_no" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:id="@+id/inputText"
                        android:hint="@string/drawer_item_message"
                        android:textColor="@color/counterTextColor"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_horizontal">

                    </EditText>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Отправить"
                        android:id="@+id/btn_out"
                        android:layout_gravity="center_horizontal">

                    </Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="H?"
                        android:id="@+id/t_help"
                        android:textSize="25dp"
                        android:textColor="@color/counterTextColor"
                        android:textIsSelectable="true"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            </android.support.v7.widget.CardView>

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:paddingTop="20dp"
        android:gravity="center|fill"
        android:weightSum="1"
        android:id="@+id/LinLayMain"
            android:layout_marginTop="55dp"
            android:layout_gravity="center_vertical">



            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_margin="3dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="2dp"
                card_view:cardCornerRadius="3dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/relLay1">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/person_photo"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="20dp"
                    android:foregroundGravity="center"
                    android:layout_centerInParent="true"
                    android:src="@drawable/waypoint"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/person_photo"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/person_photo"
                        android:layout_alignParentTop="true"
                        android:textSize="15dp"
                        android:text="Дистанция"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/id_km"
                        android:layout_toRightOf="@+id/person_photo"
                        android:layout_alignParentTop="true"
                        android:textSize="40dp"
                        android:text="0 м"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_margin="3dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="1dp"
                card_view:cardCornerRadius="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="10dp"
               >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/person_photo2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="20dp"
                    android:foregroundGravity="center"
                    android:layout_centerInParent="true"
                    android:src="@drawable/time"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/person_photo2"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/person_photo2"
                        android:layout_alignParentTop="true"
                        android:textSize="15dp"
                        android:text="Время"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_timer"
                        android:layout_toRightOf="@+id/person_photo2"
                        android:layout_alignParentTop="true"
                        android:textSize="40dp"
                        android:text="00:00:00"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

            </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_margin="4dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="2dp"
                card_view:cardCornerRadius="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/person_photo3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="20dp"
                    android:foregroundGravity="center"
                    android:layout_centerInParent="true"
                    android:src="@drawable/step"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/person_photo3"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textSize="15sp"
                        android:text="Шаг"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/t_step"
                        android:layout_alignParentTop="true"
                        android:textSize="40sp"
                        android:text="0"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

            </RelativeLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="bottom|right"
                android:layout_marginRight="0dp"
                android:padding="11dp">



            <io.saeid.fabloading.LoadingView
                android:id="@+id/loading_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleX="1"
                android:scaleY="1"
                app:mfl_onclickLoading="true"
                app:mfl_duration="100"
                android:layout_weight="2.19"
                android:src="@drawable/ic_done"
                android:layout_marginBottom="40dp" />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|fill"
            android:weightSum="1"
            android:visibility="gone"
            android:id="@+id/hiddenInfo"
            android:layout_marginTop="50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Время"
                    android:textColor="@color/md_white_1000"
                    android:textSize="17dp"
                    android:layout_gravity="left|center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="00:00:00"
                    android:id="@+id/dig_t"
                    android:textSize="55dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Дистанция"
                    android:textColor="@color/textColorPrimary"
                    android:id="@+id/textView3"
                    android:textSize="17dp"
                    android:layout_gravity="left|center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0 метров"
                    android:id="@+id/dig_km"
                    android:textSize="55dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Количество шагов"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="17dp"
                    android:layout_gravity="left|center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:id="@+id/t_count_step"
                    android:textSize="55dp"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Сожженные калории"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="17dp"
                    android:layout_gravity="left|center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:id="@+id/text_kkal"
                    android:textSize="55dp"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <com.dd.morphingbutton.MorphingButton
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Cохранить результат"
                    android:id="@+id/btnMorphSave"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />


                <TextView
                    android:id="@+id/textcont"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingTop="15dp"
                    android:text="Продолжить"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:gravity="left">

        </LinearLayout>
    </FrameLayout>
