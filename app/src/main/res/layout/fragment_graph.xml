<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:gravity="center_horizontal">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/t_common_info"
            android:textColor="@color/counterTextColor"
            android:layout_gravity="center_horizontal"
            android:paddingTop="3dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="35dp"
            android:paddingLeft="10dp"
            android:gravity="left">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/counterTextColor"
                android:text="Калорий:"
                android:textSize="16dp"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/counterTextColor"
                android:text="0"
                android:textSize="16dp"
                android:id="@+id/t_kkl"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/counterTextColor"
                android:text="Дистанция:"
                android:id="@+id/textView5" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/counterTextColor"
                android:text="0"
                android:id="@+id/t_km"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/counterTextColor"
                android:text="Шаг:"
                android:id="@+id/textView6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/counterTextColor"
                android:text="0"
                android:id="@+id/t_step"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/counterTextColor"
                    android:text="Колич. тренировок:"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/counterTextColor"
                    android:text="0"
                    android:id="@+id/t_dates"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="210dp"
        android:gravity="center_horizontal">

        <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="280dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Новости "
            android:id="@+id/t_month"
            android:textColor="@color/counterTextColor"
            android:layout_gravity="center_horizontal"
            android:paddingTop="3dp" />


        <view
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/linechart"
                class="im.dacer.androidcharts.LineView"
                android:layout_marginTop="35dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Общ. количество тренировок: "
                android:textColor="@color/counterTextColor"
                android:layout_gravity="bottom"
                android:paddingBottom="39dp"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:id="@+id/t_all" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Мин. количество тренировок в день: "
                android:textColor="@color/counterTextColor"
                android:layout_gravity="bottom"
                android:paddingTop="3dp"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:id="@+id/t_min" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Макс. количество тренировок в день: "
                android:textColor="@color/counterTextColor"
                android:layout_gravity="bottom"
                android:paddingBottom="19dp"
                android:layout_marginLeft="5dp"
                android:textSize="16dp"
                android:id="@+id/t_max" />


        </android.support.v7.widget.CardView>



    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
